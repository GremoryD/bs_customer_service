        <ContentPresenter Margin="106,0,0.6,0">
            <ContentPresenter.Content>
                <vm:LoginViewModel/>
            </ContentPresenter.Content>
        </ContentPresenter>
        <Button x:Name="LoginBan" Content="Ban Error" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="LoginBan_Click"  />

    </Grid>
</Window>
