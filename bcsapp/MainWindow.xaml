        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bcsapp"
        xmlns:Views="clr-namespace:bcsapp.Views" 
        xmlns:vm="clr-namespace:bcsapp.ViewModels" 
        x:Class="bcsapp.MainWindow"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Customer Service" x:Name="MainWIndowClient" Closed="Window_Closed" Loaded="Window_Loaded" MinHeight="400" MinWidth="200" >
