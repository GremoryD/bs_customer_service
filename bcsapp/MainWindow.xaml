<Window x:Class="bcsapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bcsapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="28"/>
        <TextBox x:Name="Output" Margin="103,15,10,10" TextWrapping="Wrap" Text="TextBox" VerticalScrollBarVisibility="Auto" Padding="0"/>
        <Button x:Name="LoginError" Content="Login Error" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="LoginError_Click"/>

    </Grid>
</Window>
