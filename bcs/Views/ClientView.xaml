<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bcs.Views" 
             xmlns:vm="clr-namespace:bcs.ViewModels"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" x:Class="bcs.Views.ClientView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFE4DEDE">
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>

        <dxr:RibbonStatusBarControl Margin="0,0,0,-0.4" Grid.Row="1" VerticalAlignment="Bottom" Height="28"/>
        <dxr:RibbonControl Height="129" RibbonStyle="Office2010" Grid.RowSpan="1">
            <dxr:RibbonDefaultPageCategory Caption="defaultCategory">
                <dxr:RibbonPage Caption="Home">
                    <dxr:RibbonPageGroup Caption="Tools"/>
                </dxr:RibbonPage>
            </dxr:RibbonDefaultPageCategory>
        </dxr:RibbonControl>

    </Grid>
</UserControl>
